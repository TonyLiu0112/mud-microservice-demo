    <modelVersion>4.0.0</modelVersion>

    <groupId>com.tony.demo.microservice.mud.services.es</groupId>
    <artifactId>ms-event-sourcing</artifactId>
    <packaging>jar</packaging>

    <name>ms-event-sourcing</name>
    <url>http://maven.apache.org</url>

    <properties>
